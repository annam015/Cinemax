<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.cinemax.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_news"
        android:name="com.example.cinemax.ui.news.NewsFragment"
        android:label="News"
        tools:layout="@layout/fragment_news" >
        <action
            android:id="@+id/action_homeFragment_to_newsFragment"
            app:destination="@id/navigation_news" />
    </fragment>

    <fragment
        android:id="@+id/navigation_discover"
        android:name="com.example.cinemax.ui.discover.DiscoverFragment"
        android:label="Discover"
        tools:layout="@layout/fragment_discover" >
        <action
            android:id="@+id/action_homeFragment_to_discoverMoviesFragment"
            app:destination="@id/navigation_discover" />
    </fragment>

    <fragment
        android:id="@+id/navigation_cinema"
        android:name="com.example.cinemax.ui.cinema.CinemaFragment"
        android:label="Cinema"
        tools:layout="@layout/fragment_cinema" >
        <action
            android:id="@+id/action_homeFragment_to_mapsFragment"
            app:destination="@id/navigation_cinema" />
    </fragment>
</navigation>

